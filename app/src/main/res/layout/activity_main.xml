<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/app_bg"
    android:paddingBottom="25dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="354dp"
        android:layout_height="321dp"
        android:layout_weight="0.41"
        android:id="@+id/Linear">

    </LinearLayout>

    <Button
        android:id="@+id/fromCameraButton"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/app_cambutton"
        android:layout_gravity="center_horizontal"
        android:onClick="captureImageFromCamera"
        android:layout_weight="0.08" />

    <Button
        android:id="@+id/fromFileButton"
        android:text="From SD Card"
        android:textColor="#9A9A9A"
        android:textSize="25sp"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:onClick="captureImageFromSdCard"/>

</LinearLayout>